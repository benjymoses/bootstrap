{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits"
      },
      "infile": "CHANGELOG.md",
      "header": "# Bootstrap Changelog"
    }
  },
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "commit": true,
    "push": true,
    "publish": true
  },
  "npm": {
    "publish": true
  }
}
