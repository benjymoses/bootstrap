{
	"_version": "22.0.0",
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"lib": ["es2023", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"outDir": "lib",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2022"
	},
	"display": "Node LTS (22)",
	"exclude": ["lib", "node_modules", "templates", "tests"],
	"include": ["src/**/*"]
}
