{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node LTS (22)",
	"_version": "22.0.0",
	"compilerOptions": {
		"lib": ["es2023", "DOM", "DOM.Iterable"],
		"module": "NodeNext",
		"target": "es2022",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "nodenext",
		"outDir": "lib",
		"rootDir": "src",
		"sourceMap": true,
		"declaration": true
	},
	"exclude": ["lib", "node_modules", "templates"]
}
