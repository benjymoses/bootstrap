{
  "name": "@benjymoses/bootstrap",
  "bin": {
    "bootstrap": "dist/index.js"
  },
  "version": "0.1.3",
  "description": "Bootstraps projects with common settings I like",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "tsc -w",
    "relink": "npm unlink bootstrap && npm link",
    "build": "tsup --format esm --dts",
    "version": "npx -p @changesets/cli -p @changesets/changelog-github changeset version",
    "release": "npm run build && npm run version && npm run publish",
    "publish": "npx -p @changesets/cli -p @changesets/changelog-github changeset publish"
  },
  "tsup": {
    "clean": true,
    "souremap": true,
    "splitting": false,
    "entry": [
      "src/index.ts"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@types/node": "^22.15.19",
    "plop": "^4.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
